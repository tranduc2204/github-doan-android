<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_background"
    android:descendantFocusability="afterDescendants"
    android:orientation="horizontal"
    tools:context=".item_nhan_vien">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/nhan_su_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/txtMsnv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="2021010131"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#0418c9"
                android:textSize="15dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtHoTen1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trần Đức"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2,3">

            <TableRow>

                <ImageButton
                    android:id="@+id/btnInfo1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/imginfo" />

                <ImageButton
                    android:id="@+id/btnUpdate1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/imgwrite" />

                <ImageButton
                    android:id="@+id/btnDelete1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/imgdelete" />

            </TableRow>
        </TableLayout>

    </LinearLayout>
</LinearLayout>